{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false,
      "required": true
    },
    "title": {
      "type": "string",
      "maxLength": 50,
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "minLength": 50,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false
    },
    "content": {
      "type": "richtext",
      "required": true,
      "minLength": 200
    }
  }
}
